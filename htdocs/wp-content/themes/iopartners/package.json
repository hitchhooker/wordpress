{
  "name": "amenum-core",
  "version": "1.0.0",
  "description": "Amenum Core Starter Theme for WordPress.",
  "author": "Amenum",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Theme",
    "Amenum"
  ],
  "homepage": "https://www.amenum.com/amenum-core/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Amenum/Amenum-Core.git"
  },
  "bugs": {
    "url": "https://github.com/Amenum/Amenum-Core/issues"
  },
  "dependencies": {
    "bootstrap": "^5.0.1",
    "core-js": "^3.14.0",
    "flickity": "^2.2.2",
    "image-webpack-loader": "^7.0.1",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@soda/friendly-errors-webpack-plugin": "^1.8.0",
    "@wordpress/scripts": "^17.1.0",
    "browser-sync": "^2.26.14",
    "browser-sync-webpack-plugin": "^2.3.0",
    "dir-archiver": "^1.2.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "rtlcss": "^3.2.0",
    "sass": "^1.35.1",
    "sass-loader": "^12.1.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-webpack-plugin": "^3.0.1",
    "webpack": "^5.39.1",
    "webpack-assets-manifest": "^5.0.6",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^5.8.0"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "scripts": {
    "start": "webpack --watch --config webpack.config.start.js",
    "watch": "sass sass/ -o ./ --source-map true --output-style expanded --indent-type tab --indent-width 1 -w",
    "build": "webpack --config webpack.config.production.js",
    "compile:css": "sass sass/ -o ./ && stylelint '*.css' --fix || true && stylelint '*.css' --fix",
    "compile:rtl": "rtlcss style.css style-rtl.css",
    "lint:scss": "wp-scripts lint-style 'sass/**/*.scss'",
    "lint:js": "wp-scripts lint-js 'js/*.js'",
    "bundle": "dir-archiver --src . --dest ../_s.zip --exclude .DS_Store .stylelintrc.json .eslintrc .git .gitattributes .github .gitignore README.md composer.json composer.lock node_modules vendor package-lock.json package.json .travis.yml phpcs.xml.dist sass style.css.map"
  }
}
